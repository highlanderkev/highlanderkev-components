{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
